@model MXKJ.JSJRZ.WebUI.Models.SafeManager.AddFireFightingViewModel
@using System.Web.Optimization
@{
    ViewBag.Title = "增加消防器材记录";
    Layout = "~/Views/Shared/_LayoutSafe.cshtml";
}
@section CSS{

    @Styles.Render("~/bundles/datepicker/css")
}
@section JS {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/datepicker/js")
}
<body class="hold-transition sidebar-mini" s style="background-color:#ecf0f5;">
    <div class="wrapper">
        <!-- Content Wrapper. Contains page content -->
        <div>
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    增加消防器材记录
                </h1>
            </section>

            <!-- Main content -->
            <section class="content">
                @using (Html.BeginForm("AddFireFighting", "SafeManager", FormMethod.Post, new { role = "form" }))
                {
                    <div class="row">
                        <!-- left column -->
                        <div class="col-md-12">
                            <!-- general form elements -->
                            <div class="box box-primary">
                                <div class="box-header with-border text-right">
                                    <h3 class="box-title"><button type="submit" class="btn btn-danger">保存</button>&nbsp&nbsp<button type="button" onclick="history.go(-1)" class="btn btn-default">返回</button></h3>
                                    <h4 class="text-left">
                                        <p>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</p>
                                        <p>@Html.ValidationMessageFor(m => m.Location, "", new { @class = "text-danger" })</p>
                                        <p>@Html.ValidationMessageFor(m => m.InputTime, "", new { @class = "text-danger" })</p>
                                        <p>@Html.ValidationMessageFor(m => m.BuyTime, "", new { @class = "text-danger" })</p>
                                        <p>@Html.ValidationMessageFor(m => m.FireplugNum, "", new { @class = "text-danger" })</p>
                                        <p>@Html.ValidationMessageFor(m => m.ExtinguisherNum, "", new { @class = "text-danger" })</p>
                                    </h4>
                                </div><!-- /.box-header -->
                                <!-- form start -->
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label>器材位置<a style="color:red">*</a></label>
                                                @Html.TextBoxFor(m => m.Location, new { @class = "form-control", placeholder = "请输入器材位置" })
                                            </div>
                                            <div class="form-group">
                                                <label>填报时间</label>
                                                @Html.TextBoxFor(m => m.InputTime, "{0:yyyy-MM-dd}", new { @class = "form-control", placeholder = "请输入填报时间" })
                                            </div>
                                            <div class="form-group">
                                                <label>购买时间</label>
                                                @Html.TextBoxFor(m => m.BuyTime, "{0:yyyy-MM-dd}", new { @class = "form-control", placeholder = "请输入购买时间" })
                                            </div>
                                            <div class="form-group">
                                                <label>灭火器数量</label>
                                                @Html.TextBoxFor(m => m.FireplugNum,  new { @class = "form-control", placeholder = "请输入灭火器数量" })
                                            </div>
                                            <div class="form-group">
                                                <label>消火栓个数</label>
                                                @Html.TextBoxFor(m => m.FireplugNum,  new { @class = "form-control", placeholder = "请输入消火栓个数" })
                                            </div>
                                            <div class="form-group">
                                                <label>管理人</label>
                                                @Html.TextBoxFor(m => m.Manager, new { @class = "form-control", placeholder = "请输入管理人" })
                                            </div>
                                            <div class="form-group">
                                                <label>管理器情况</label>
                                                @Html.TextAreaFor(m => m.MaintainState, 6, 50, new { @class = "form-control", placeholder = "请输入管理器情况" })
                                            </div>
                                            <div class="form-group">
                                                <label>保养情况</label>
                                                @Html.TextAreaFor(m => m.MaintainState, 6, 50, new { @class = "form-control", placeholder = "请输入保养情况" })
                                            </div>
                                            <div class="form-group">
                                                <label>备注</label>
                                                @Html.TextAreaFor(m => m.MaintainState, 6, 50, new { @class = "form-control", placeholder = "请输入备注" })
                                            </div>

                                        </div><!-- /.box-body -->

                                    </div>

                                </div>
                            </div><!-- /.box -->
                        </div><!--/.col (left) -->
                    </div>   <!-- /.row -->
                }
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
    </div><!-- ./wrapper -->
    <script>
        $('#InputTime').datetimepicker({
            format: 'yyyy-mm-dd',
            language: 'zh-CN',
            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            minView: 2,
            forceParse: 0
        });

        $('#BuyTime').datetimepicker({
            format: 'yyyy-mm-dd',
            language: 'zh-CN',
            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            minView: 2,
            forceParse: 0
        });
    </script>
</body>
