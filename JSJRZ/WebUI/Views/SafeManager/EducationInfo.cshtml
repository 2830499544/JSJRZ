@model MXKJ.JSJRZ.WebUI.Models.SafeManager.EducationInfoViewModel
@using MXKJ.JSJRZ.WebUI.Models.SafeManager
@using System.Web.Optimization
@{
    ViewBag.Title = "学生安全教育记录";
    Layout = "~/Views/Shared/_LayoutSafe.cshtml";
}
@section CSS{
    <!-- DataTables -->
    @Styles.Render("~/bundles/DataTable/css")
}
@section JS{
    <!-- DataTables -->
    @Scripts.Render("~/bundles/DataTable/js")
}
<body class="hold-transition sidebar-mini" style="background-color:#ecf0f5;">
    <div class="wrapper">
        <!-- Content Wrapper. Contains page content -->
        <div>
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    学生安全教育记录
                </h1>
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-12">
                        <!-- general form elements -->
                        <div class="box box-primary">
                            <div class="box-header with-border text-left">
                                <h3 class="box-title">
                                    @Html.ActionLink("新建", "AddEducation", "SafeManager", null, new { @class = "btn btn-danger", })&nbsp&nbsp
                                    <button type="button" id="DelButton" class="btn  btn-default">删除</button>
                                </h3>

                            </div><!-- /.box-header -->
                            <!-- form start -->
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="box">
                                        <div class="box-header">
                                            <h3 class="box-title"></h3>
                                        </div><!-- /.box-header -->
                                        <div class="box-body">
                                            <table id="usersTable" class="table table-bordered table-striped">
                                                <thead>
                                                    <tr>
                                                        <th style="display:none">ID</th>
                                                        <th>主题 </th>
                                                        <th>时间</th>
                                                        <th>组织者</th>
                                                        <th>参与学生</th>
                                                        <th>描述</th>
                                                        <th style="width:50px">编辑</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (EducationInfoItemViewModel vTempItem in Model.ItemList)
                                                    {
                                                        <tr class="even gradeA">
                                                            <td style="display:none">@vTempItem.ID</td>
                                                            <td>@vTempItem.Theme</td>
                                                            <td>@vTempItem.Time.ToString("yyyy年MM月dd日")</td>
                                                            <td>@vTempItem.Organizer</td>
                                                            <td>@vTempItem.Student</td>
                                                            <td>@vTempItem.Describe</td>
                                                            <td>@Html.ActionLink("编辑", "EditEducation", "SafeManager", new { ID = vTempItem.ID }, new { @class = "btn btn-block btn-success" })</td>
                                                        </tr>
                                                    }
                                            </table>
                                        </div><!-- /.box-body -->
                                    </div><!-- /.box -->
                                </div>
                            </div>
                        </div><!-- /.box -->
                    </div><!--/.col (left) -->
                </div>   <!-- /.row -->
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
    </div><!-- ./wrapper -->
    <script>
        var table;
        $(document).ready(function () {
            $(function () {
                table = $('#usersTable').DataTable({
                    responsive: true,
                    Retrieve: true,
                    'language': {
                        'search': '搜索:',
                        'zeroRecords': "没有记录",
                        "info": "显示第 _START_ 至 _END_ 项结果，共 _TOTAL_ 项",
                        "infoEmpty": "显示第 0 至 0 项结果，共 0 项",
                        'lengthMenu': '显示 _MENU_ 条记录',
                        paginate: {
                            previous: '‹',
                            next: '›'
                        },
                        aria: {
                            paginate: {
                                previous: '上一页',
                                next: '下一页'
                            }
                        }
                    }
                });
            });

            $('#usersTable tbody').on('click', 'tr', function () {
                $(this).toggleClass('selected');
            });


            $('#DelButton').click(function () {

                var selectRows = table.rows('.selected').indexes();
                var count = table.rows('.selected').data().length;
                if (count == 0) {
                    alert("请选择需要删除的记录");
                    return;
                }
                if (confirm("请确认是否进行删除操作？")) {
                    var i = 0;
                    var code = "";
                    for (i; i < count; i++) {
                        var tempData = table.rows(selectRows[i]).data();
                        code += tempData[0][0] + "|";
                        //table.rows(selectRows[i]).remove().draw(false);
                    }
                    $.getJSON(
                           "/SafeManager/DeleteEducation",
                           { IDS: code },
                           function (result) {
                               if (result) {
                                   table.rows('.selected').remove().draw(false);
                               }
                           }
                      )
                }
            });
        })

    </script>
</body>
