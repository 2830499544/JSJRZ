@model MXKJ.JSJRZ.WebUI.Models.DormitoryManager.AddDormitoryViewModel
@*@using System.Web.Optimization*@
@{
    ViewBag.Title = "添加公寓";
    Layout = "~/Views/Shared/_LayoutDormitoryManager.cshtml";
}
@section JS {
    @*@Scripts.Render("~/bundles/jqueryval")*@
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
<body class="hold-transition sidebar-mini" s style="background-color:#ecf0f5;">
    <div class="wrapper">
        <!-- Content Wrapper. Contains page content -->
        <div>
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    添加公寓
                </h1>
            </section>

            <!-- Main content -->
            <section class="content">
                @using (Html.BeginForm("AddDormitory", "DormitoryManager", FormMethod.Post, new { role = "form" }))
                {
                    <div class="row">
                        <!-- left column -->
                        <div class="col-md-12">
                            <!-- general form elements -->
                            <div class="box box-primary">
                                <div class="box-header with-border text-right">
                                    <h3 class="box-title"><button type="submit" class="btn btn-danger">保存</button>&nbsp&nbsp<button type="button" onclick="history.go(-1)" class="btn btn-default">返回</button></h3>
                                    <h4 class="text-left">
                                        <p>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</p>
                                        <p>@Html.ValidationMessageFor(m => m.BuildName, "", new { @class = "text-danger" })</p>
                                        <p>@Html.ValidationMessageFor(m => m.Storey, "", new { @class = "text-danger" })</p>
                                        <p>@Html.ValidationMessageFor(m => m.Unit, "", new { @class = "text-danger" })</p>
                                        <p>@Html.ValidationMessageFor(m => m.LyaerHouseNumber, "", new { @class = "text-danger" })</p>
                                    </h4>
                                </div><!-- /.box-header -->
                                <!-- form start -->

                                <div class="row">

                                    <div class="col-md-6">

                                        <div class="box-body">
                                            <div class="form-group">
                                                <label>建筑名称<a style="color:red">*</a></label>
                                                @Html.TextBoxFor(m => m.BuildName, new { @class = "form-control", placeholder = "请输入建筑名称" })
                                                @Html.HiddenFor(m => m.ID)
                                            </div>
                                            <div class="form-group">
                                                <label>建筑类型</label>
                                                @Html.DropDownListFor(m => m.BuildType, Model.BuildTypeList, "请选择建筑类型", new { @class = "form-control", placeholder = "请选择建筑类型" })
                                            </div>
                                            <div class="form-group">
                                                <label>房屋状态</label>
                                                @Html.DropDownListFor(m => m.HouseState, Model.HouseStateList, "请选择房屋状态", new { @class = "form-control", placeholder = "请选择房屋状态" })
                                            </div>
                                            <div class="form-group">
                                                <label>楼层<a style="color:red">*</a></label>
                                                @Html.TextBoxFor(m => m.Storey, new { @class = "form-control", placeholder = "请输入楼层" })
                                            </div>
                                            <div class="form-group">
                                                <label>建筑时间</label>
                                                @Html.TextBoxFor(m => m.BuildTime, new { @class = "form-control", placeholder = "请输入建筑时间" })
                                            </div>
                                            <div class="form-group">
                                                <label>占用面积</label>
                                                @Html.TextBoxFor(m => m.OccupiedArea, new { @class = "form-control", placeholder = "请输入占用面积" })
                                            </div>
                                            <div class="form-group">
                                                <label>面积</label>
                                                @Html.TextBoxFor(m => m.Area, new { @class = "form-control", placeholder = "请输入面积" })
                                            </div>
                                            <div class="form-group">
                                                <label>所在校区</label>
                                                @Html.TextBoxFor(m => m.Campus, new { @class = "form-control", placeholder = "请输入所在校区" })
                                            </div>

                                        </div><!-- /.box-body -->

                                    </div>

                                    <div class="col-md-6">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label>楼编号</label>
                                                @Html.TextBoxFor(m => m.Unit, new { @class = "form-control", placeholder = "请输入楼编号" })
                                            </div>
                                            <div class="form-group">
                                                <label>建筑用途</label>
                                                @Html.DropDownListFor(m => m.Purpose, Model.PurposeList, "请选择建筑用途", new { @class = "form-control", placeholder = "请选择建筑用途" })
                                            </div>
                                            <div class="form-group">
                                                <label>房屋结构</label>
                                                @Html.DropDownListFor(m => m.HouseStructure, Model.HouseStructureList, "请选择建筑房屋结构", new { @class = "form-control", placeholder = "请选择建筑房屋结构" })
                                            </div>
                                            <div class="form-group">
                                                <label>每层最大房间楼<a style="color:red">*</a></label>
                                                @Html.TextBoxFor(m => m.LyaerHouseNumber, new { @class = "form-control", placeholder = "请输入每层最大房间楼" })
                                            </div>
                                            <div class="form-group">
                                                <label>楼管处电话</label>
                                                @Html.TextBoxFor(m => m.ManagementTel, new { @class = "form-control", placeholder = "请输入每层楼管处电话" })
                                            </div>
                                            <div class="form-group">
                                                <label>建筑用费</label>
                                                @Html.TextBoxFor(m => m.BuildMoney, new { @class = "form-control", placeholder = "请输入建筑用费" })
                                            </div>
                                            <div class="form-group">
                                                <label>财产</label>
                                                @Html.TextBoxFor(m => m.Property, new { @class = "form-control", placeholder = "请输入财产" })
                                            </div>
                                            <div class="form-group">
                                                <label>位置</label>
                                                @Html.TextBoxFor(m => m.Position, new { @class = "form-control", placeholder = "请输入位置" })
                                            </div>
                                        </div><!-- /.box-body -->
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label>备注</label>
                                                @Html.TextAreaFor(m => m.Memo, new { @class = "form-control", placeholder = "请输入备注" })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div><!-- /.box -->
                        </div><!--/.col (left) -->
                    </div>   <!-- /.row -->
                }
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
    </div><!-- ./wrapper -->
</body>
