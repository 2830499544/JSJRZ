@model MXKJ.JSJRZ.WebUI.Models.DormitoryManager.StudentInfoViewModel
@using System.Web.Optimization
@{
    ViewBag.Title = "学生信息";
    Layout = "~/Views/Shared/_LayoutDormitoryManager.cshtml";
}

<body class="hold-transition sidebar-mini" s style="background-color:#ecf0f5;">
    <div class="wrapper">
        <!-- Content Wrapper. Contains page content -->
        <div>
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    学生信息
                </h1>
            </section>
            <!-- Main content -->
            <section class="content">
              
                    <div class="row">
                        <!-- left column -->
                        <div class="col-md-12">
                            <!-- general form elements -->
                            <div class="box box-primary">
                                <div class="box-header with-border text-right">
                                    <h3 class="box-title"><button type="button" onclick="history.go(-1)" class="btn btn-default">返回</button></h3>
                                </div><!-- /.box-header -->
                                <!-- form start -->

                                <div class="row">

                                    <div class="col-md-6">

                                        <div class="box-body">
                                            <div class="form-group">
                                                <label>学生姓名</label>
                                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly="" })
                                            </div>
                                            <div class="form-group">
                                                <label>学号</label>
                                                @Html.TextBoxFor(m => m.StudentID, new { @class = "form-control", @readonly = "" })
                                            </div>
                                            <div class="form-group">
                                                <label>性别</label>
                                                @Html.TextBoxFor(m => m.Sex, new { @class = "form-control", @readonly = "" })
                                            </div>
                                            <div class="form-group">
                                                <label>手机</label>
                                                @Html.TextBoxFor(m => m.MobileTel, new { @class = "form-control", @readonly = "" })
                                            </div>
                                        </div><!-- /.box-body -->

                                    </div>

                                    <div class="col-md-6">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label>家庭住址</label>
                                                @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @readonly = "" })
                                            </div>
                                            <div class="form-group">
                                                <label>生日</label>
                                                @Html.TextBoxFor(m => m.Birthday,"{0:yyyy年MM月dd日}", new { @class = "form-control", @readonly = "" })
                                            </div>
                                            <div class="form-group">
                                                <label>QQ</label>
                                                @Html.TextBoxFor(m => m.QQ, new { @class = "form-control", @readonly = "" })
                                            </div>
                                            <div class="form-group">
                                                <label>微信</label>
                                                @Html.TextBoxFor(m => m.WeiXi, new { @class = "form-control", @readonly = "" })
                                            </div>
                                        </div><!-- /.box-body -->
                                    </div>

                                </div>
                            </div><!-- /.box -->
                        </div><!--/.col (left) -->
                    </div>   <!-- /.row -->
                
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
    </div><!-- ./wrapper -->
</body>
